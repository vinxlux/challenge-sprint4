{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    {
      "src": "/images/(.*)",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable"
      },
      "dest": "/images/$1"
    },
    {
      "handle": "filesystem"
    },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}